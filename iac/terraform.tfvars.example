project_name        = "claim-status-api"
environment         = "dev"
aws_region          = "us-east-1"
vpc_cidr            = "10.20.0.0/16"
cluster_name        = "cl-01"
cluster_version     = "1.31"
node_instance_types = ["t3.large"]
node_desired_size   = 2
node_min_size       = 1
node_max_size       = 3
log_retention_days  = 14

# Optional backend integration. Leave empty to skip API routes/integrations until NLB exists.
backend_nlb_listener_arn      = ""
backend_integration_timeout_ms = 29000

# Backend Kubernetes service account (for IRSA)
k8s_namespace            = "claims"
k8s_service_account_name = "claim-status-api"
k8s_deployment_name      = "claim-status-api"
k8s_container_name       = "claim-status-api"
k8s_deployment_replicas  = 2

# Optional: manage EKS console/kubectl access entries for specific IAM principals.
# Example principal ARN formats:
# - arn:aws:iam::<account-id>:user/<user-name>
# - arn:aws:iam::<account-id>:role/<role-name>
cluster_access_entries = []

# Optional: add the Terraform caller as an EKS access entry.
# Keep false if module-level creator access is already enabled to avoid duplicate entry conflicts.
add_current_caller_access = false

# Policies used only when add_current_caller_access = true
current_caller_policy_arns = [
	"arn:aws:eks::aws:cluster-access-policy/AmazonEKSAdminPolicy",
	"arn:aws:eks::aws:cluster-access-policy/AmazonEKSClusterAdminPolicy",
	"arn:aws:eks::aws:cluster-access-policy/AmazonEKSViewPolicy"
]

# Scope Bedrock permission to model ARN, or keep '*' during initial development
bedrock_model_arn = "*"

# GitHub Actions -> ECR role (OIDC)
enable_github_actions_role = true

# Set true if your AWS account does not already have the GitHub OIDC provider
create_github_oidc_provider = false

# Optional override when using an existing provider; leave empty to auto-derive account ARN
github_oidc_provider_arn = ""

# Set your GitHub repository coordinates
github_org    = "your-org"
github_repo   = "aws-training-introspective2"
github_branch = "main"

# Optional explicit role name
github_actions_role_name = ""
